<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ttxxly.reader">

    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.launcher.LauncherActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.set.SetActivity" />
        <activity android:name=".ui.feedback.FeedbackActivity" />
        <activity android:name=".ui.about.AboutActivity" />
        <activity android:name=".ui.history.HistoryActivity" />
        <activity android:name=".ui.information.UserInformationActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.bookdetail.BookDetailActivity" />
        <activity android:name=".ui.read.ReadActivity" />
        <activity android:name=".ui.category.CategoryActivity" />
        <activity android:name=".ui.hot.HotActivity" />
        <activity android:name=".ui.finish.FinishActivity" />
        <activity android:name=".ui.rank.RankActivity" />
        <activity android:name=".ui.selection.SelectionActivity" />
        <activity android:name=".ui.category.SubCategoryActivity"></activity>
    </application>

</manifest>